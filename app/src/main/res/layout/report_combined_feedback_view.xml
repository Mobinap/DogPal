<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/feedbackInsightsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">


        <ProgressBar
            android:id="@+id/progressBarLoading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <!-- 1. Global Average Rating -->
        <TextView
            android:id="@+id/globalAverageRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Global Average Rating: 0.0★"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distribution of Ratings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 2. Star rating distribution (5★ to 1★) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">
            <!-- 5 Star -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="5 ★"
                    android:textSize="16sp"
                    android:textColor="#7CA4D9" />

                <ProgressBar
                    android:id="@+id/progressBar5Stars"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="75"
                    android:progressTint="#7CA4D9"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/count5Stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 4 Star -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="4 ★"
                    android:textSize="16sp"
                    android:textColor="#7CA4D9" />

                <ProgressBar
                    android:id="@+id/progressBar4Stars"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="15"
                    android:progressTint="#7CA4D9"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/count4Stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 3 Star -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="3 ★"
                    android:textSize="16sp"
                    android:textColor="#808080" />

                <ProgressBar
                    android:id="@+id/progressBar3Stars"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="5"
                    android:progressTint="#808080"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/count3Stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 2 Star -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="2 ★"
                    android:textSize="16sp"
                    android:textColor="#606060" />

                <ProgressBar
                    android:id="@+id/progressBar2Stars"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#606060"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/count2Stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 1 Star -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1 ★"
                    android:textSize="16sp"
                    android:textColor="#404040" />

                <ProgressBar
                    android:id="@+id/progressBar1Star"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#404040"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/count1Star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- REPLACES your "Best Rated Event" block -->
        <TextView
            android:id="@+id/bestEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Rated Events"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />


        <LinearLayout
            android:id="@+id/topRatedContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:weightSum="3" >

            <!-- Event 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="4dp" >
                <!-- Rank Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🥇1st"
                    android:textColor="#7CA4D9"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="4dp" />

                <ImageView
                    android:id="@+id/eventImage1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dog_placeholder"
                    android:elevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Top rated event 1"/>

                <TextView
                    android:id="@+id/eventTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Best Event"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/eventRating1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="⭐0.0"
                    android:textColor="#FFD700"
                    android:textSize="13sp"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <!-- Event 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🥈2nd"
                    android:textColor="#7CA4D9"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="4dp" />

                <ImageView
                    android:id="@+id/eventImage2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dog_placeholder"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="Top rated event 2"/>

                <TextView
                    android:id="@+id/eventTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="2nd Event"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/eventRating2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="⭐0.0"
                    android:textColor="#FFD700"
                    android:textSize="13sp"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <!-- Event 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🥉3rd"
                    android:textColor="#7CA4D9"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="4dp" />

                <ImageView
                    android:id="@+id/eventImage3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:elevation="4dp"
                    android:src="@drawable/dog_placeholder"
                    android:clickable="true"
                    android:focusable="true"

                    android:contentDescription="Top rated event 3"/>

                <TextView
                    android:id="@+id/eventTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="3rd Event"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/eventRating3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="⭐0.0"
                    android:textColor="#FFD700"
                    android:textSize="13sp"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>



        <!-- Worst Rated Event Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lowest Rated Event"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/worstRatedEventCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Worst rated event">

            <ImageView
                android:id="@+id/worstEventImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dog_placeholder"
                android:background="@android:color/darker_gray"
                android:contentDescription="Lowest rated event image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/worstEventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/worstEventCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="#777777"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/worstEventRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0★ (0 ratings)"
                    android:textColor="#FFD700"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Recent Event Ratings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/weeklyRatingsBarChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="800dp"
            android:elevation="2dp" />


    </LinearLayout>
</ScrollView>
