<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    android:background="@drawable/border"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/dogImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_image" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/dogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dog Name"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView android:id="@+id/dogBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed: Golden Retriever"/>

        <TextView android:id="@+id/dogAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: 2"/>

        <TextView android:id="@+id/dogGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: Female"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/dogCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"/>
</LinearLayout>
