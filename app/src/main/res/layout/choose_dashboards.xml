<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Centered Main Text -->

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wich Dashboard \nDo You Want to View?"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <!-- Search Events Button -->
        <LinearLayout
            android:id="@+id/btnSearchEvents"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile_menu"
                android:tint="@color/black"
                android:contentDescription="Search Events Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attended Events"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Organize Events Button -->
        <LinearLayout
            android:id="@+id/btnOrganizeEvents"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="8dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/book_icon"
                android:contentDescription="Organize Events Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organized Events"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
