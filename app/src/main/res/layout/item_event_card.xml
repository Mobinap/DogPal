<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:padding="6dp"
    android:background="@drawable/border"
    android:layout_marginBottom="8dp"
    android:layout_margin="1dp">

    <!-- Horizontal layout for image + event info -->
    <LinearLayout
        android:id="@+id/eventContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="48dp"> <!-- leave space for the 3-dot button -->

        <!-- Event Image -->
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Event Image"
            android:src="@drawable/dog_placeholder" />

        <!-- Event Info -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#797878"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:maxLines="1"
                android:textColor="#797878"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- 3-dot menu button -->
    <ImageButton
        android:id="@+id/eventMenuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_horiz"
        android:layout_margin="2dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Event Menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
