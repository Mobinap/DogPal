<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Top Right Icons Container -->
    <LinearLayout
        android:id="@+id/topRightIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Notification Icon -->
        <FrameLayout
            android:id="@+id/notification_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_alert" />

            <View
                android:id="@+id/notification_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/ic_red_dot"
                android:layout_gravity="top|end"
                android:visibility="gone" />
        </FrameLayout>


        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home_profile_icon"
            android:contentDescription="Profile Icon"
            android:padding="6dp"
            android:elevation="8dp" />
    </LinearLayout>

    <!-- Greeting Text Top Left -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Hi, User!"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp" />


    <!-- Centered Main Text -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Would You Like to Do Today?"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <!-- Search Events Button -->
        <LinearLayout
            android:id="@+id/btnSearchEvents"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/search_icon"
                android:contentDescription="Search Events Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Events"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Organize Events Button -->
        <LinearLayout
            android:id="@+id/btnOrganizeEvents"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_button"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/book_icon"
                android:contentDescription="Organize Events Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organize Events"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
