<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="8dp">

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/progressBarLoading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hosted Events Overview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Total Events with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_createdat"
                android:layout_marginEnd="8dp"
                android:contentDescription="Total Events" />

            <TextView
                android:id="@+id/total_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: 0"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Status Breakdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/upcoming_events"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Upcoming: 0"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/passed_events"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Passed: 0"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/cancelled_events"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancelled: 0"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Attendee and Cancelled Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_attendees"
                android:contentDescription="Total Attendees"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/total_joined"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cancelled"
                android:contentDescription="Total Cancelled"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/totalCancelled"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Average Attendees -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_average_chart"
                android:layout_marginEnd="8dp"
                android:contentDescription="Average attendees" />

            <TextView
                android:id="@+id/average_attendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Chart: Category Distribution of Passed Events -->
        <TextView
            android:id="@+id/text_pie_chart_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passed Events by Category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_categories"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" />

        <!-- Chart: Attendance per Past Event -->
        <TextView
            android:id="@+id/text_bar_chart_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance Per Category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_chart_attendance"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />


    </LinearLayout>
</ScrollView>
