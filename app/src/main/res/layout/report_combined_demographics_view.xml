<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Loading Spinner -->
        <ProgressBar
            android:id="@+id/progressBarLoading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" />

        <!-- Section Header -->
        <TextView
            android:id="@+id/sectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dog Demographics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Total Dogs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconTotalDogs"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dog_count"
                android:contentDescription="Dog Icon"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/textTotalDogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iconMaleDog"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_boy"
                android:contentDescription="Male Dog Icon"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/textMaleRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/iconFemaleDog"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_girl"
                android:contentDescription="Female Dog Icon"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/textFemaleRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textAvgDogsPerEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Dogs per Event: 0"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/textMostCommonBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Common Breed: -"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:paddingBottom="2dp" />



        <!-- Breed Distribution Pie Chart -->
        <TextView
            android:id="@+id/text_breedPieChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall Breed Distribution"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:paddingBottom="4dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/breedPieChart"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Age Group Bar Chart -->
        <TextView
            android:id="@+id/text_ageBarChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age Group Distribution"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/ageBarChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
