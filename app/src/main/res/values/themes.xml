<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DogPal" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="TabButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tab_button_bg</item>
        <item name="android:textColor">@color/tab_button_text_selector</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.DogPal.Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your colors if needed -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
    </style>


</resources>

